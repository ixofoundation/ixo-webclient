{
  "$id": "http://ixofoundation/submit_claim.json",
  "type": "object",
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "payload": {
      "$id": "/properties/payload",
      "type": "object",
      "properties": {
       "template": {
          "$id": "/properties/payload/properties/template",
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "title": "The Name Schema ",
              "default": "",
              "examples": [
                "submit_claim"
              ]
            }
          },
          "required": [
            "name"
          ]
        },
        "data": {
          "$id": "/properties/payload/properties/data",
          "type": "object",
          "properties": {
            "projectDid": {
              "$id": "/properties/payload/properties/data/properties/projectDid",
              "type": "string",
              "title": "The project did ",
              "default": "",
              "examples": [
                "did:ixo:23423432"
              ],
              "required":[
               "projectDid" 
              ]
            }
          }
        }
      },
      "required": [
        "data",
        "template"
      ],
      "additionalProperties": true
    },
    "signature": {
      "$id": "/properties/signature",
      "type": "object",
      "properties": {
        "type": {
          "$id": "/properties/signature/properties/type",
          "type": "string",
          "title": "The Type Schema ",
          "default": "",
          "examples": [
            "ECDSA"
          ],
          "required": [
            "type"
          ]
        },
        "created": {
          "$id": "/properties/signature/properties/created",
          "type": "string",
          "title": "The Created Schema ",
          "default": "",
          "examples": [
            "2016-02-08T16:02:20Z"
          ],
          "required": [
            "created"
          ]
        },
        "creator": {
          "$id": "/properties/signature/properties/creator",
          "type": "string",
          "title": "The Creator Schema ",
          "default": "",
          "examples": [
            "did:ixo:987654321"
          ],
          "required": [
            "creator"
          ]
        },
        "signatureValue": {
          "$id": "/properties/signature/properties/signatureValue",
          "type": "string",
          "title": "The Signature Schema ",
          "default": "",
          "examples": [
            "0x1d4a6d5efce1312944f781fb917b484f2ac0c74c53fe8b571dc8f1be6dc6b6692db3e3d08c0a934631f81bf0bba50c591385d34819ac955ec16f38ee04ee480201"
          ],
          "required": [
            "signatureValue"
          ]
        }
      },
      "required": [
        "type",
        "created",
        "signatureValue",
        "creator"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "payload",
    "signature"
  ],
  "additionalProperties": false
}